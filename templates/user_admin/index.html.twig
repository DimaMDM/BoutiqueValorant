{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    
    {# En-t√™te avec Bouton Cr√©er #}
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-white">üë• Gestion des Utilisateurs</h1>
        <a href="{{ path('app_user_admin_new') }}" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition">
            + Nouvel Utilisateur
        </a>
    </div>

    {# Tableau Stylis√© #}
    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-900 text-gray-400 uppercase text-xs tracking-wider">
                    <th class="p-4 font-semibold border-b border-gray-700">ID</th>
                    <th class="p-4 font-semibold border-b border-gray-700">Email</th>
                    <th class="p-4 font-semibold border-b border-gray-700">R√¥les</th>
                    <th class="p-4 font-semibold border-b border-gray-700">Nom Complet</th>
                    <th class="p-4 font-semibold border-b border-gray-700">V√©rifi√© ?</th>
                    <th class="p-4 font-semibold border-b border-gray-700 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-300 divide-y divide-gray-700">
            {% for user in users %}
                <tr class="hover:bg-gray-750 transition duration-150">
                    <td class="p-4 font-mono text-sm text-gray-500">#{{ user.id }}</td>
                    <td class="p-4 font-bold text-white">{{ user.email }}</td>
                    <td class="p-4">
                        {% for role in user.roles %}
                            <span class="inline-block bg-gray-700 text-xs px-2 py-1 rounded mr-1 mb-1">
                                {{ role|replace({'ROLE_': ''}) }}
                            </span>
                        {% endfor %}
                    </td>
                    {# Adapte ces champs si tes propri√©t√©s s'appellent diff√©remment #}
                    <td class="p-4">{{ user.firstName }} {{ user.lastName }}</td>
                    <td class="p-4">
                        {% if user.isVerified %}
                            <span class="text-green-400 font-bold">Oui</span>
                        {% else %}
                            <span class="text-red-400">Non</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-right space-x-2">
                        <a href="{{ path('app_user_admin_show', {'id': user.id}) }}" class="text-blue-400 hover:text-blue-300 text-sm font-bold">Voir</a>
                        <a href="{{ path('app_user_admin_edit', {'id': user.id}) }}" class="text-yellow-400 hover:text-yellow-300 text-sm font-bold">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="p-8 text-center text-gray-500">Aucun utilisateur trouv√©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}