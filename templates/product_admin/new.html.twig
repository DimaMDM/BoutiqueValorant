{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen py-12">
    <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <a href="{{ path('app_product_admin_index') }}" class="text-red-500 hover:text-red-400 inline-flex items-center gap-2 mb-4">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Retour à la liste
                </a>
                <h1 class="text-4xl font-black text-white mb-2">AJOUTER UN PRODUIT</h1>
                <p class="text-gray-400">Remplissez les informations du nouveau produit</p>
            </div>

            <!-- Formulaire -->
            <div class="bg-gray-800 rounded-xl p-8 border border-gray-700">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                    <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.name) }}</label>
                        {{ form_widget(form.name) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.name) }}</div>
                    </div>

                    <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.price) }}</label>
                        {{ form_widget(form.price) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.price) }}</div>
                    </div>

                    <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.description) }}</label>
                        {{ form_widget(form.description) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.description) }}</div>
                    </div>

                     <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.stock) }}</label>
                        {{ form_widget(form.stock) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.stock) }}</div>
                    </div>

                    <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.status) }}</label>
                        {{ form_widget(form.status) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.status) }}</div>
                    </div>

                    <div>
                        <label class="block text-white font-bold mb-2">{{ form_label(form.imageFile) }}</label>
                        {{ form_widget(form.imageFile) }}
                        <div class="text-red-500 text-sm mt-1">{{ form_errors(form.imageFile) }}</div>
                        <p class="text-gray-400 text-sm mt-2">Formats acceptés : JPG, PNG, GIF, WEBP (Max 5MB)</p>
                    </div>

                    <div class="flex gap-4 pt-4">
                        <button type="submit" 
                                class="flex-1 bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-6 rounded-lg transform transition-all duration-200 hover:scale-105 shadow-lg shadow-red-900/50 flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Créer le produit
                        </button>
                        
                        <a href="{{ path('app_product_admin_index') }}" 
                           class="flex-1 bg-gray-700 hover:bg-gray-600 text-white font-bold py-4 px-6 rounded-lg transition-all text-center">
                            Annuler
                        </a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}