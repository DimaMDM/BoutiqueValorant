{% extends 'base.html.twig' %}

{% block title %}Administration des Produits{% endblock %}

{% block body %}
<div class="bg-gray-900 min-h-screen py-12">
    <div class="container mx-auto px-6">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-black text-white mb-2">ADMINISTRATION DES PRODUITS</h1>
                <p class="text-gray-400">Gérez tous vos produits Valorant</p>
            </div>
            <a href="{{ path('app_product_admin_new') }}" 
               class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transform transition-all duration-200 hover:scale-105 shadow-lg shadow-red-900/50">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span>Ajouter un produit</span>
            </a>
        </div>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="bg-green-600 text-white px-6 py-4 rounded-lg mb-6 flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {{ message }}
            </div>
        {% endfor %}

        <!-- Table des produits -->
        {% if products is empty %}
            <div class="text-center py-16 bg-gray-800 rounded-xl border border-gray-700">
                <div class="inline-block p-6 bg-gray-700 rounded-full mb-4">
                    <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-300 mb-2">Aucun produit disponible</h3>
                <p class="text-gray-500 mb-6">Commencez par ajouter votre premier produit</p>
                <a href="{{ path('app_product_admin_new') }}" class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Ajouter un produit
                </a>
            </div>
        {% else %}
            <div class="bg-gray-800 rounded-xl overflow-hidden border border-gray-700">
                <table class="w-full">
                    <thead class="bg-gray-900">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Image</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Nom</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Prix</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Description</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Stock</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-wider">Statut</th>
                            <th class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                        {% for product in products %}
                            <tr class="hover:bg-gray-700/50 transition-colors">
                                <td class="px-6 py-4">
                                    {% if product.images is not empty %}
                                        <img src="{{ asset('uploads/products/' ~ product.images[0].url) }}" 
                                             alt="{{ product.name }}" 
                                             class="w-20 h-20 object-cover rounded-lg">
                                    {% else %}
                                        <div class="w-20 h-20 bg-gray-700 rounded-lg flex items-center justify-center">
                                            <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                        </div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-white font-bold">{{ product.name }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-red-500 font-bold">{{ product.price }} VP</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-gray-400 text-sm max-w-xs truncate">
                                        {{ product.description ?? 'Aucune description' }}
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-white font-bold">{{ product.stock }}</div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full "
                                          :class="{ 'bg-green-100 text-green-800': product.status == 'AVAILABLE', 'bg-red-100 text-red-800': product.status == 'OUT_OF_STOCK', 'bg-yellow-100 text-yellow-800': product.status == 'PRE_ORDER' }">
                                        {{ product.status ? product.status.value : 'Non défini' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="{{ path('app_product_admin_edit', {'id': product.id}) }}" 
                                           class="inline-flex items-center gap-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-all text-sm">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                            Modifier
                                        </a>
                                        <form method="post" action="{{ path('app_product_admin_delete', {'id': product.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                            <button type="submit" 
                                                    class="inline-flex items-center gap-1 bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition-all text-sm">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="navigation flex justify-center mt-4">
                {{ knp_pagination_render(products) }}
            </div>

            <div class="mt-6 text-center">
                <a href="{{ path('app_home') }}" class="text-gray-400 hover:text-white transition-colors">
                    ← Retour à l'accueil
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}