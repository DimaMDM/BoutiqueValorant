{% extends 'base.html.twig' %}

{% block title %}{{ 'app.title'|trans }}{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-red-950 via-gray-900 to-black py-24 overflow-hidden">
    <!-- Fond avec pattern -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 35px, rgba(255,70,85,.03) 35px, rgba(255,70,85,.03) 70px);"></div>
    </div>
    
    <!-- Éléments décoratifs -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-red-600 rounded-full blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-40 h-40 bg-red-800 rounded-full blur-3xl opacity-20 animate-pulse" style="animation-delay: 1s;"></div>
    
    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-5xl mx-auto">
            <!-- Badge "Nouveau" -->
            <div class="inline-block mb-6">
                <span class="px-4 py-2 bg-red-600 text-white text-sm font-bold uppercase rounded-full shadow-lg shadow-red-900/50 animate-pulse">
                    {{ 'home.hero.badge'|trans|raw }}
                </span>
            </div>
            
            <h1 class="text-6xl md:text-7xl font-black mb-6 leading-tight">
                <span class="block text-white drop-shadow-2xl">{{ 'home.hero.title1'|trans }}</span>
                <span class="block text-transparent bg-clip-text bg-gradient-to-r from-red-500 via-red-600 to-pink-500 animate-pulse">
                    {{ 'home.hero.title2'|trans }}
                </span>
            </h1>
            
            <p class="text-xl md:text-2xl text-gray-300 mb-10 font-light max-w-3xl mx-auto leading-relaxed">
                {{ 'home.hero.subtitle'|trans|raw }}
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="{{ path('app_product_index') }}" 
                   class="group inline-flex items-center gap-3 bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-8 rounded-lg transform transition-all duration-200 hover:scale-105 shadow-xl shadow-red-900/50">
                    <span class="uppercase tracking-wide">{{ 'home.hero.button1'|trans }}</span>
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </a>
                
                <a href="#featured" 
                   class="inline-flex items-center gap-2 bg-transparent border-2 border-red-600 hover:bg-red-600 text-white font-bold py-4 px-8 rounded-lg transform transition-all duration-200 hover:scale-105">
                    <span class="uppercase tracking-wide">{{ 'home.hero.button2'|trans }}</span>
                </a>
            </div>
            
            <!-- Stats -->
            <div class="mt-16 grid grid-cols-3 gap-8 max-w-2xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl font-black text-red-500 mb-1">{{ 'home.hero.stat1.value'|trans }}</div>
                    <div class="text-sm text-gray-400 uppercase tracking-wide">{{ 'home.hero.stat1.label'|trans }}</div>
                </div>
                <div class="text-center border-l border-r border-gray-700">
                    <div class="text-3xl font-black text-red-500 mb-1">{{ 'home.hero.stat2.value'|trans }}</div>
                    <div class="text-sm text-gray-400 uppercase tracking-wide">{{ 'home.hero.stat2.label'|trans }}</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-black text-red-500 mb-1">{{ 'home.hero.stat3.value'|trans }}</div>
                    <div class="text-sm text-gray-400 uppercase tracking-wide">{{ 'home.hero.stat3.label'|trans }}</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products Section -->
<div id="featured" class="bg-gray-900 py-20">
    <div class="container mx-auto px-6">
        <!-- Header de section -->
        <div class="text-center mb-12">
            <span class="text-red-500 font-bold uppercase tracking-wider text-sm">{{ 'home.featured.header'|trans }}</span>
            <h2 class="text-4xl md:text-5xl font-black text-white mt-2 mb-4">
                {{ 'home.featured.title'|trans }}
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto">
                {{ 'home.featured.subtitle'|trans }}
            </p>
        </div>

        {% if featured_products is empty %}
            <div class="text-center py-16 bg-gray-800 rounded-xl border border-gray-700">
                <div class="inline-block p-6 bg-gray-700 rounded-full mb-4">
                    <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-300 mb-2">{{ 'home.featured.empty.title'|trans }}</h3>
                <p class="text-gray-500">{{ 'home.featured.empty.subtitle'|trans }}</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {% for product in featured_products %}
                    <div class="group bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl overflow-hidden shadow-2xl hover:shadow-red-900/30 transition-all duration-300 transform hover:-translate-y-3 border border-gray-700 hover:border-red-600">
                        
                        <!-- Image du produit -->
                        <div class="relative h-56 bg-gradient-to-br from-gray-700 via-gray-800 to-black overflow-hidden">
                            {% if product.images is not empty %}
                                <img src="{{ asset('uploads/products/' ~ product.images[0].url) }}" 
                                     alt="{{ product.name }}" 
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                            {% else %}
                                <!-- Placeholder amélioré -->
                                <div class="flex flex-col items-center justify-center h-full gap-3">
                                    <div class="relative">
                                        <div class="absolute inset-0 bg-red-600 blur-xl opacity-50 animate-pulse"></div>
                                        <svg class="w-24 h-24 text-red-500 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                        </svg>
                                    </div>
                                    <span class="text-gray-500 text-sm font-semibold uppercase tracking-wider">{{ product.name }}</span>
                                </div>
                            {% endif %}
                            
                            <!-- Badge "Nouveau" -->
                            <div class="absolute top-4 left-4 px-3 py-1 bg-red-600 text-white text-xs font-bold uppercase rounded-full shadow-lg">
                                {{ 'home.featured.new_badge'|trans }}
                            </div>
                        </div>

                        <!-- Informations du produit -->
                        <div class="p-6">
                            <h3 class="text-2xl font-black text-white mb-2 group-hover:text-red-500 transition-colors line-clamp-1">
                                {{ product.name }}
                            </h3>
                            
                            {% if product.description %}
                                <p class="text-gray-400 text-sm mb-4 line-clamp-2">
                                    {{ product.description }}
                                </p>
                            {% endif %}

                            <div class="flex items-center justify-between pt-4 border-t border-gray-700">
                                <div>
                                    <div class="text-sm text-gray-500 uppercase tracking-wide mb-1">{{ 'home.featured.price'|trans }}</div>
                                    <span class="text-2xl font-black text-red-500">
                                        {{ product.price }} <span class="text-lg">VP</span>
                                    </span>
                                </div>
                                <button class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-105 flex items-center gap-2 shadow-lg shadow-red-900/30">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                                    </svg>
                                    <span>{{ 'home.featured.buy_button'|trans }}</span>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Bouton "Voir plus" -->
            <div class="text-center mt-12">
                <a href="{{ path('app_product_index') }}" 
                   class="inline-flex items-center gap-3 bg-transparent border-2 border-red-600 hover:bg-red-600 text-white font-bold py-4 px-8 rounded-lg transition-all duration-200 transform hover:scale-105">
                    <span class="uppercase tracking-wide">{{ 'home.featured.see_all_button'|trans }}</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>
        {% endif %}
    </div>
</div>

