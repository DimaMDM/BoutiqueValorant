{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la Boutique Valorant{% endblock %}

{% block body %}
<body class="bg-gray-900 text-white">

    <!-- Header -->
    <header class="bg-gray-800 shadow">
        <nav class="container mx-auto px-6 py-3">
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold">
                    <a href="{{ path('app_home') }}" class="hover:text-gray-300">Boutique Valorant</a>
                </div>
                <div>
                    <a href="{{ path('app_skin_index') }}" class="px-3 py-2 rounded hover:bg-gray-700">Skins</a>
                    <a href="#" class="px-3 py-2 rounded hover:bg-gray-700">À propos</a>
                    <a href="#" class="px-3 py-2 rounded hover:bg-gray-700">Contact</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-12">
        <div class="text-center">
            <h1 class="text-4xl font-bold mb-4">Découvrez les meilleurs skins Valorant</h1>
            <p class="text-lg text-gray-400 mb-8">Trouvez le skin parfait pour votre arme préférée et dominez le champ de bataille.</p>
            <a href="{{ path('app_skin_index') }}" class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg">Voir les skins</a>
        </div>

        <!-- Featured Skins (Placeholder) -->
        <div class="mt-16">
            <h2 class="text-3xl font-bold text-center mb-8">Skins en vedette</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Placeholder items -->
                <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                    <h3 class="text-xl font-bold mb-2">Skin 1</h3>
                    <p class="text-gray-400">Description du skin en vedette.</p>
                </div>
                <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                    <h3 class="text-xl font-bold mb-2">Skin 2</h3>
                    <p class="text-gray-400">Description du skin en vedette.</p>
                </div>
                <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                    <h3 class="text-xl font-bold mb-2">Skin 3</h3>
                    <p class="text-gray-400">Description du skin en vedette.</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 mt-12">
        <div class="container mx-auto px-6 py-4 text-center text-gray-400">
            &copy; {{ "now"|date("Y") }} Boutique Valorant. Tous droits réservés.
        </div>
    </footer>

</body>
{% endblock %}
