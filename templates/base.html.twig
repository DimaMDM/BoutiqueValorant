{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la Boutique Valorant{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-red-900 via-gray-900 to-black py-20">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-6xl font-black mb-6 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-pink-500">
                VALORANT SKINS SHOP
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 font-light">
                Découvrez les skins les plus exclusifs et dominez le champ de bataille avec style
            </p>
            <a href="{{ path('app_skin_index') }}" 
               class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-4 px-8 rounded-lg transform transition hover:scale-105 shadow-lg shadow-red-900/50">
                VOIR TOUS LES SKINS
            </a>
        </div>
    </div>
</div>

<!-- Featured Skins Section -->
<div class="bg-gray-900 py-16">
    <div class="container mx-auto px-6">
        <div class="flex items-center justify-between mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white">
                SKINS EN VEDETTE
            </h2>
            <a href="{{ path('app_skin_index') }}" class="text-red-500 hover:text-red-400 font-semibold flex items-center gap-2">
                Voir tout
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>

        {% if featured_skins is empty %}
            <div class="text-center py-12">
                <p class="text-gray-400 text-lg">Aucun skin disponible pour le moment.</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for skin in featured_skins %}
                    <a href="{{ path('app_skin_show', {'id': skin.id}) }}" 
                       class="group bg-gray-800 rounded-lg overflow-hidden shadow-xl hover:shadow-2xl hover:shadow-red-900/20 transition-all duration-300 transform hover:-translate-y-2">
                        
                        <!-- Image du skin -->
                        <div class="relative h-48 bg-gradient-to-br from-gray-700 to-gray-900 overflow-hidden">
                            {% if skin.imageUrl %}
                                <img src="{{ skin.imageUrl }}" 
                                     alt="{{ skin.name }}" 
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                            {% else %}
                                <div class="flex items-center justify-center h-full">
                                    <svg class="w-20 h-20 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            {% endif %}
                            
                            <!-- Badge de rareté (si tu as ce champ) -->
                            {% if skin.rarity is defined %}
                                <div class="absolute top-3 right-3 px-3 py-1 rounded-full text-xs font-bold uppercase
                                    {% if skin.rarity == 'legendary' %}bg-yellow-500 text-black
                                    {% elseif skin.rarity == 'epic' %}bg-purple-500 text-white
                                    {% elseif skin.rarity == 'rare' %}bg-blue-500 text-white
                                    {% else %}bg-gray-500 text-white{% endif %}">
                                    {{ skin.rarity }}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Informations du skin -->
                        <div class="p-5">
                            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-red-500 transition-colors">
                                {{ skin.name }}
                            </h3>
                            
                            {% if skin.collection is defined and skin.collection %}
                                <p class="text-gray-400 text-sm mb-3">
                                    Collection: {{ skin.collection }}
                                </p>
                            {% endif %}

                            <div class="flex items-center justify-between">
                                <span class="text-2xl font-bold text-red-500">
                                    {% if skin.price is defined %}
                                        {{ skin.price }} VP
                                    {% else %}
                                        Prix sur demande
                                    {% endif %}
                                </span>
                                <span class="text-gray-400 text-sm group-hover:text-red-400 transition-colors">
                                    Voir détails →
                                </span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<!-- Section Pourquoi nous choisir -->
<div class="bg-black py-16">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center text-white mb-12">POURQUOI NOUS CHOISIR ?</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center p-6">
                <div class="inline-block p-4 bg-red-600 rounded-full mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-3">100% Sécurisé</h3>
                <p class="text-gray-400">Toutes les transactions sont sécurisées et vérifiées</p>
            </div>

            <div class="text-center p-6">
                <div class="inline-block p-4 bg-red-600 rounded-full mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-3">Livraison Rapide</h3>
                <p class="text-gray-400">Recevez vos skins instantanément après l'achat</p>
            </div>

            <div class="text-center p-6">
                <div class="inline-block p-4 bg-red-600 rounded-full mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-3">Skins Exclusifs</h3>
                <p class="text-gray-400">Accès aux collections les plus rares et recherchées</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}