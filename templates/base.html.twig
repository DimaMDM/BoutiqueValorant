<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'app.title'|trans }}{% endblock %}</title>
    
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col">
    
    <!-- Navigation -->
    <header class="bg-black border-b-2 border-red-600 shadow-lg shadow-red-900/20 sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="text-2xl font-black tracking-wider">
                    <a href="{{ path('app_home') }}" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
                        <div class="w-10 h-10 bg-gradient-to-br from-red-600 to-red-800 rounded-lg flex items-center justify-center transform -skew-x-6">
                            <span class="text-white font-black text-xl">V</span>
                        </div>
                        <span class="text-white">VALORANT <span class="text-red-600">SHOP</span></span>
                    </a>
                </div>
                
                <!-- Menu -->
                <div class="flex items-center gap-2">
                    <a href="{{ path('app_home') }}" 
                       class="px-5 py-2 rounded font-semibold uppercase text-sm tracking-wide hover:bg-red-600 hover:text-white transition-all duration-200 
                              {% if app.request.get('_route') == 'app_home' %}bg-red-600 text-white{% else %}text-gray-300{% endif %}">
                        {{ 'menu.home'|trans }}
                    </a>
                    <a href="{{ path('app_product_index') }}" 
                       class="px-5 py-2 rounded font-semibold uppercase text-sm tracking-wide hover:bg-red-600 hover:text-white transition-all duration-200
                              {% if app.request.get('_route') == 'app_product_index' %}bg-red-600 text-white{% else %}text-gray-300{% endif %}">
                        {{ 'menu.products'|trans }}
                    </a>
                    <a href="{{ path('app_about') }}" class="px-5 py-2 rounded font-semibold uppercase text-sm tracking-wide hover:bg-red-600 hover:text-white transition-all duration-200
                              {% if app.request.get('_route') == 'app_about' %}bg-red-600 text-white{% else %}text-gray-300{% endif %}">
                        {{ 'menu.about'|trans }}
                    </a>
                    <a href="{{ path('app_contact') }}" class="px-5 py-2 rounded font-semibold uppercase text-sm tracking-wide hover:bg-red-600 hover:text-white transition-all duration-200
                              {% if app.request.get('_route') == 'app_contact' %}bg-red-600 text-white{% else %}text-gray-300{% endif %}">
                        {{ 'menu.contact'|trans }}
                    </a>
                    
                    <div class="flex items-center gap-4">
                        {# LIEN PANIER (Toujours visible) #}
                        <a href="{{ path('cart_index') }}" class="text-gray-300 hover:text-white font-bold flex items-center gap-2">
                            <span>{{ 'My Cart'|trans }}</span>
                            {# Petit badge rouge s'il y a des items (Bonus visuel) #}
                            {% if app.session.get('cart') %}
                                <span class="bg-red-600 text-white text-xs rounded-full px-2 py-0.5">
                                    {{ app.session.get('cart') | length }}
                                </span>
                            {% endif %}
                        </a>

                        {# ZONE UTILISATEUR #}
                        {% if app.user %}
                            {# CAS 1 : Connecté #}
                            <div class="flex items-center gap-4 border-l border-gray-600 pl-4">
                                
                                {# Affichage du nom (ou email) #}
                                <span class="text-red-500 font-bold uppercase text-sm">
                                    {{ app.user.email }} 
                                    {# Si tu as un champ 'pseudo' dans l'entité User, mets app.user.pseudo #}
                                </span>

                                {# Lien Admin (Visible seulement pour les Admins) #}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('admin_dashboard') }}" class="bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm font-bold">
                                        ADMIN
                                    </a>
                                {% endif %}

                                {# Déconnexion #}
                                <a href="{{ path('app_logout') }}" class="text-gray-400 hover:text-white text-sm">
                                    {{ 'Logout'|trans }}
                                </a>
                            </div>
                        {% else %}
                            {# CAS 2 : Visiteur (Non connecté) #}
                            <div class="flex items-center gap-4 border-l border-gray-600 pl-4">
                                <a href="{{ path('app_login') }}" class="text-white hover:text-red-500 font-bold transition-colors">
                                    LOGIN
                                </a>
                                <a href="{{ path('app_register') }}" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded font-bold transition-colors">
                                    JOIN US
                                </a>
                            </div>
                        {% endif %}

                        <div class="border-l border-gray-600 pl-4 ml-4 flex gap-2 font-mono text-xs">
                            <a href="{{ path('change_locale', {locale: 'fr'}) }}" class="{{ app.request.locale == 'fr' ? 'text-red-500 font-bold' : 'text-gray-400' }}">FR</a>
                            <span class="text-gray-600">|</span>
                            <a href="{{ path('change_locale', {locale: 'en'}) }}" class="{{ app.request.locale == 'en' ? 'text-red-500 font-bold' : 'text-gray-400' }}">EN</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    {# Zone d'affichage des messages Flash #}
    <div class="container mx-auto mt-4 px-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 mb-4 rounded-lg 
                    {% if label == 'success' %}bg-green-100 text-green-800 border border-green-200{% endif %}
                    {% if label == 'danger' %}bg-red-100 text-red-800 border border-red-200{% endif %}
                    {% if label == 'warning' %}bg-yellow-100 text-yellow-800 border border-yellow-200{% endif %}
                    {% if label == 'info' %}bg-blue-100 text-blue-800 border border-blue-200{% endif %}
                    " role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <!-- Contenu principal -->
    <main class="flex-grow">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 mt-auto">
        <div class="container mx-auto px-6 py-6 text-center text-gray-400">
            <p>&copy; {{ "now"|date("Y") }} {{ 'app.title'|trans }}. {{ 'footer.rights'|trans }}</p>
            <p class="text-sm mt-2">{{ 'footer.student'|trans }}</p>
        </div>
    </footer>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>