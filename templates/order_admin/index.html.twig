{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-white">üì¶ Historique des Commandes</h1>
        {# Pas de bouton "Nouvelle commande" ici, car √ßa se fait via le panier g√©n√©ralement #}
    </div>

    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-900 text-gray-400 uppercase text-xs tracking-wider">
                    <th class="p-4 font-semibold border-b border-gray-700">ID</th>
                    <th class="p-4 font-semibold border-b border-gray-700">R√©f√©rence</th>
                    <th class="p-4 font-semibold border-b border-gray-700">Date</th>
                    <th class="p-4 font-semibold border-b border-gray-700">Client</th>
                    <th class="p-4 font-semibold border-b border-gray-700">Statut</th>
                    <th class="p-4 font-semibold border-b border-gray-700 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-300 divide-y divide-gray-700">
            {% for order in orders %}
                <tr class="hover:bg-gray-750 transition duration-150">
                    <td class="p-4 font-mono text-sm text-gray-500">#{{ order.id }}</td>
                    <td class="p-4 font-bold text-white font-mono">{{ order.reference }}</td>
                    <td class="p-4 text-sm">{{ order.createdAt ? order.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td class="p-4">
                        {# Affiche l'email du client s'il existe #}
                        {{ order.user ? order.user.email : 'Anonyme' }}
                    </td>
                    <td class="p-4">
                        {# Un petit badge color√© pour le statut #}
                        <span class="bg-blue-900 text-blue-200 px-2 py-1 rounded text-xs uppercase font-bold border border-blue-700">
                           {# Si c'est un enum, il faut peut-√™tre mettre order.status.value #}
                           {{ order.status ? order.status.name : order.status }} 
                        </span>
                    </td>
                    <td class="p-4 text-right space-x-2">
                        <a href="{{ path('app_order_admin_show', {'id': order.id}) }}" class="bg-gray-700 hover:bg-white hover:text-black text-white px-3 py-1 rounded text-xs font-bold transition">
                            G√©rer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="p-8 text-center text-gray-500">Aucune commande enregistr√©e.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {# Pagination (si tu as KnpPaginator) #}
    <div class="mt-4 flex justify-center">
        {# {{ knp_pagination_render(orders) }} #}
    </div>
</div>
{% endblock %}